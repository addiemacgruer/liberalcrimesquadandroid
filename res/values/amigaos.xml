<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="amigabutton" parent="android:style/Widget.Button">
		<item name="android:background">@drawable/amibutton</item>
		<item name="android:padding">10dip</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="dosbutton" parent="android:style/Widget.Button">
		<item name="android:background">@drawable/dosbutton</item>
		<item name="android:padding">10dip</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="workbench">
		<item name="android:background">@drawable/window</item>
		<item name="android:paddingTop">40dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingBottom">10dip</item>
	</style>

	<style name="amigaos" parent="android:Theme">
		<item name="android:textColor">#000000</item>
		<item name="android:buttonStyle">@style/amigabutton</item>
		<item name="android:textSize">12sp</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:windowBackground">@drawable/window</item>
	</style>

	<style name="dos" parent="android:Theme">
		<item name="android:windowBackground">@drawable/workgroup</item>
		<item name="android:buttonStyle">@style/dosbutton</item>
		<item name="android:textSize">12sp</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:textColor">#000000</item>
	</style>

	<style name="android" parent="android:Theme">
		<item name="android:textColor">#ffffff</item>
		<item name="android:buttonStyle">@android:style/Widget.Button</item>
		<item name="android:windowBackground">@android:color/background_dark</item>
		<item name="android:textSize">12sp</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
	</style>

</resources>